<div class="main">

	<div class='container'>
		<div class="row">
			<div class='col-lg-offset-3 col-lg-6'>

				<div>
					<% unless flash[:error].blank? %>
					<%= flash[:error].each do |error| %>
					<% error %>
					<% end %>
					<% end %>
				</div>

				<h1>Editing Book</h1>
				<!-- form_for部分 -->
				<%= form_for(@book) do |f| %>
				<div class="field row">
					<h4>Title</h4>
					<%= f.text_field :title, class: "book_title col-xs-12" %>
				</div>
				<div class="field row">
					<h4>Body</h4>
					<%= f.text_area :body, class: "book_body col-xs-12" %>
				</div>
				<div class="actions row">
					<p class="under"><%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %></p>
				</div>
				<% end %>

				<%= link_to "Show", book_path(@book.id), class: "book" %>
				|
				<%= link_to 'Back', books_path, class: "back" %>
			</div>
		</div>