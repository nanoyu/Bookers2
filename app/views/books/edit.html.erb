<div class="main">

	<div class='container'>

		<h1>Editing Book</h1>
		<!-- form_for部分 -->
		<%= form_for(@book) do |f| %>
		<div class="field">
			<h4>Title</h4>
			<%= f.text_field :title, class: "book_title" %>
		</div>
		<div class="field">
			<h4>Body</h4>
			<%= f.text_area :body, class: "book_body" %>
		</div>
		<p><%= f.submit 'Update Book' %></p>
		<% end %>

		<%= link_to "Show", book_path(@book.id), class: "book" %>
		|
		<%= link_to 'Back', books_path, class: "back" %>
	</div>
</div>