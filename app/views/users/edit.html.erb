<div class="main">

	<div class='container'>
		<h1>User info</h1>
		<!-- form_for部分 -->
		<%= form_for(@user) do |f| %>
		<div class="field">
			<h4>Name</h4>
			<%= f.text_field :name, class: "name" %>
		</div>
		<div class="field">
			<%= f.attachment_field :image, class: "user_image" %>
		</div>
		<div class="field">
			<h4>Introduction</h4>
			<%= f.text_area :introduction, class: "introduction" %>
		</div>
		<p class="submit"><%= f.submit 'Update User' %></p>
		<% end %>
	</div>
</div>
